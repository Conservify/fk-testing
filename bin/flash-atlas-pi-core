#!/bin/bash

set -xe

pushd ~/fieldkit/firmware-common
mkdir -p build
pushd build
cp ../core/config.h.conservify ../core/config.h
cmake -DCORE_GENERATION_2=OFF -DDEBUG_UART_FALLBACK=OFF -DDEBUG_UART_REQUIRE_CONSOLE=ON -DDISABLE_RADIO=ON -DPROFILE_AMAZON=ON -DWIFI_ALWAYS_ON=OFF ../ && make
cp ../core/config.h.conservify ../core/config.h
scp fk-core.bin atlas-pi: && ssh atlas-pi "./flash-core"
popd
popd
